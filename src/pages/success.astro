---
import Layout from '../layouts/Layout.astro';
import { verifyCheckoutSession } from '../lib/stripe.js';
import { createAccessToken } from '../lib/auth.js';

const sessionId = Astro.url.searchParams.get('session_id');

let accessGranted = false;
let customerEmail = '';
let error = '';

if (sessionId) {
  try {
    const session = await verifyCheckoutSession(sessionId);

    if (session.payment_status === 'paid') {
      customerEmail = session.customer_details?.email || '';
      accessGranted = true;

      // Cria um token de acesso
      const accessToken = createAccessToken(customerEmail, session.id);

      // Define o cookie com o token de acesso
      Astro.cookies.set('access_token', accessToken, {
        path: '/',
        maxAge: 60 * 60 * 24 * 30, // 30 dias
        httpOnly: true,
        secure: true,
        sameSite: 'strict'
      });
    } else {
      error = 'Pagamento ainda não foi confirmado. Por favor, aguarde alguns instantes.';
    }
  } catch (err) {
    console.error('Erro ao verificar sessão:', err);
    error = 'Erro ao verificar o pagamento. Por favor, entre em contato com o suporte.';
  }
} else {
  error = 'ID de sessão não encontrado.';
}
---

<Layout title="Pagamento Confirmado - PINNs em Petrofísica">
  <main class="success-page">
    <div class="container">
      {accessGranted ? (
        <div class="success-content">
          <div class="success-icon">✓</div>
          <h1>Pagamento Confirmado!</h1>
          <p class="success-message">
            Obrigado pela sua compra! Seu acesso ao ebook foi liberado.
          </p>
          <div class="email-info">
            <p>Um email de confirmação foi enviado para:</p>
            <strong>{customerEmail}</strong>
          </div>
          <div class="next-steps">
            <h2>Próximos Passos</h2>
            <ol>
              <li>Você já tem acesso ao conteúdo completo do ebook</li>
              <li>Clique no botão abaixo para começar a leitura</li>
              <li>Seu acesso é vitalício - você pode voltar quando quiser</li>
            </ol>
          </div>
          <div class="cta-buttons">
            <a href="/ebook" class="btn-primary">
              Começar a Leitura
            </a>
          </div>
        </div>
      ) : (
        <div class="error-content">
          <div class="error-icon">⚠️</div>
          <h1>Ops! Algo deu errado</h1>
          <p class="error-message">{error}</p>
          <div class="cta-buttons">
            <a href="/" class="btn-secondary">Voltar para o Início</a>
            <a href="/checkout" class="btn-primary">Tentar Novamente</a>
          </div>
        </div>
      )}
    </div>
  </main>
</Layout>

<style>
  .success-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: var(--dark);
  }

  .success-content,
  .error-content {
    max-width: 600px;
    text-align: center;
    background: var(--dark-light);
    padding: 3rem;
    border-radius: 1rem;
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .success-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    color: white;
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.4);
  }

  .error-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .success-message,
  .error-message {
    font-size: 1.1rem;
    color: var(--gray);
    margin-bottom: 2rem;
  }

  .email-info {
    background: var(--dark);
    padding: 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .email-info p {
    color: var(--gray);
    margin-bottom: 0.5rem;
  }

  .email-info strong {
    color: var(--secondary);
    font-size: 1.1rem;
  }

  .next-steps {
    text-align: left;
    background: var(--dark);
    padding: 1.5rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .next-steps h2 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--white);
  }

  .next-steps ol {
    padding-left: 1.5rem;
    color: var(--gray);
  }

  .next-steps li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary,
  .btn-secondary {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: var(--white);
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(59, 130, 246, 0.6);
  }

  .btn-secondary {
    background: var(--dark);
    color: var(--white);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .btn-secondary:hover {
    border-color: var(--primary);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .success-content,
    .error-content {
      padding: 2rem;
    }

    h1 {
      font-size: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }
</style>