<style>
  main {
    padding-top: 80px;
  }

  .hero {
    padding: 3rem 0 4rem;
    background: var(--gradient-bg);
    border-bottom: 1px solid var(--border-color);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  .hero-text {
    text-align: left;
    padding: 0 2rem;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .subtitle {
    font-size: clamp(1.1rem, 3vw, 1.5rem);
    color: var(--secondary);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .description {
    font-size: clamp(1rem, 2vw, 1.1rem);
    color: var(--text-tertiary);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .cta-section {
    margin-top: 2rem;
  }

  .price {
    margin-bottom: 1.5rem;
  }

  .price-label {
    display: block;
    font-size: clamp(0.9rem, 2vw, 1rem);
    color: var(--text-tertiary);
    margin-bottom: 0.5rem;
  }

  .price-value {
    display: block;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    color: var(--text-primary);
  }

  .btn-primary {
    display: inline-block;
    background: var(--gradient-primary);
    color: white;
    padding: clamp(0.875rem, 2vw, 1rem) clamp(2rem, 4vw, 2.5rem);
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: clamp(1rem, 2vw, 1.1rem);
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0 4px 20px var(--shadow-hover);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px var(--shadow-hover);
  }

  .btn-large {
    padding: clamp(1rem, 2.5vw, 1.25rem) clamp(2.5rem, 5vw, 3rem);
    font-size: clamp(1.1rem, 2.5vw, 1.25rem);
  }

  .guarantee {
    margin-top: 1rem;
    color: var(--text-tertiary);
    font-size: clamp(0.85rem, 2vw, 0.9rem);
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .book-3d {
    perspective: 1000px;
    animation: float 6s ease-in-out infinite;
    width: 100%;
    max-width: 400px;
  }

  .book-3d img {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 20px 60px var(--shadow-color);
    transform: rotateY(-15deg) rotateX(5deg);
    transition: transform 0.3s;
  }

  .book-3d:hover img {
    transform: rotateY(-10deg) rotateX(2deg) scale(1.05);
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .learning {
    padding: 4rem 0 5rem;
    background: var(--bg-primary);
  }

  .learning h2 {
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: 3rem;
    color: var(--text-primary);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 3rem;
  }

  .learning-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .learning-item {
    background: var(--bg-secondary);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid var(--border-color);
    transition: transform 0.3s, border-color 0.3s, box-shadow 0.3s;
  }

  .learning-item:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: 0 8px 24px var(--shadow-color);
  }

  .icon {
    font-size: clamp(2.5rem, 4vw, 3rem);
    margin-bottom: 1rem;
  }

  .learning-item h3 {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .learning-item p {
    color: var(--text-tertiary);
    line-height: 1.6;
    font-size: clamp(0.9rem, 2vw, 1rem);
  }

  .author {
    padding: 4rem 0 5rem;
    background: var(--bg-secondary);
  }

  .author-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  .author-info {
    text-align: left;
  }

  .author h2 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .author h3 {
    font-size: clamp(1.5rem, 3vw, 1.8rem);
    color: var(--secondary);
    margin-bottom: 1.5rem;
  }

  .author p {
    color: var(--text-tertiary);
    line-height: 1.8;
    margin-bottom: 1rem;
    font-size: clamp(0.95rem, 2vw, 1rem);
    max-width: 100%;
  }

  .author-placeholder {
    width: 100%;
    max-width: 200px;
    height: auto;
    aspect-ratio: 1;
    margin: 0 auto;
  }

  .author-placeholder svg {
    width: 100%;
    height: 100%;
  }

  .final-cta {
    padding: 4rem 0 5rem;
    background: var(--gradient-bg);
    text-align: center;
  }

  .final-cta h2 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .final-cta > .container > p {
    color: var(--text-tertiary);
    font-size: clamp(1rem, 2vw, 1.2rem);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    margin-bottom: 1.5rem;
  }

  .payment-methods p {
    color: var(--text-tertiary);
    font-size: clamp(0.85rem, 2vw, 0.9rem);
  }

  /* Responsividade Avan√ßada */
  @media (max-width: 1024px) {
    main {
      padding-top: 60px;
    }

    .hero-content {
      gap: 3rem;
    }

    .learning-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0 3rem;
    }

    .hero-content,
    .author-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .hero-image {
      order: -1;
    }

    .book-3d {
      max-width: 300px;
    }

    .learning {
      padding: 3rem 0 4rem;
    }

    .learning-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .learning-item {
      padding: 1.5rem;
    }

    .author {
      padding: 3rem 0 4rem;
    }

    .author-content {
      text-align: center;
    }

    .author-info {
      text-align: center;
    }

    .final-cta {
      padding: 3rem 0 4rem;
    }

    .cta-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .btn-primary {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    main {
      padding-top: 50px;
    }

    .hero {
      padding: 1.5rem 0 2rem;
    }

    .atom-icon {
      width: 50px;
      height: 50px;
    }

    .learning {
      padding: 2rem 0 3rem;
    }

    .learning h2,
    .author h2,
    .final-cta h2 {
      margin-bottom: 2rem;
    }

    .author {
      padding: 2rem 0 3rem;
    }

    .final-cta {
      padding: 2rem 0 3rem;
    }

    .book-3d {
      max-width: 250px;
    }
  }

  /* Landscape mobile */
  @media (max-height: 600px) and (orientation: landscape) {
    .hero {
      padding: 2rem 0;
    }

    .learning,
    .author,
    .final-cta {
      padding: 2rem 0;
    }
  }
</style>
