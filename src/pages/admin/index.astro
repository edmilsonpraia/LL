---
import Layout from '../../layouts/Layout.astro';
import fs from 'fs/promises';
import path from 'path';

// Lê os pagamentos pendentes
let payments = [];
try {
  const dataFile = path.join(process.cwd(), 'uploads', 'pending-payments.json');
  const fileContent = await fs.readFile(dataFile, 'utf-8');
  payments = JSON.parse(fileContent);
} catch (err) {
  console.log('Nenhum pagamento pendente');
}

// Separa por status
const pending = payments.filter(p => p.status === 'pending');
const approved = payments.filter(p => p.status === 'approved');
const rejected = payments.filter(p => p.status === 'rejected');
---

<Layout title="Admin - Gerenciar Pagamentos">
  <main class="admin-page">
    <div class="container">
      <header class="admin-header">
        <h1>Gerenciamento de Pagamentos</h1>
        <div class="stats">
          <div class="stat-card">
            <div class="stat-number">{pending.length}</div>
            <div class="stat-label">Pendentes</div>
          </div>
          <div class="stat-card approved">
            <div class="stat-number">{approved.length}</div>
            <div class="stat-label">Aprovados</div>
          </div>
          <div class="stat-card rejected">
            <div class="stat-number">{rejected.length}</div>
            <div class="stat-label">Rejeitados</div>
          </div>
        </div>
      </header>

      <div class="tabs">
        <button class="tab active" data-tab="pending">
          Pendentes ({pending.length})
        </button>
        <button class="tab" data-tab="approved">
          Aprovados ({approved.length})
        </button>
        <button class="tab" data-tab="rejected">
          Rejeitados ({rejected.length})
        </button>
      </div>

      <div id="pending-tab" class="tab-content active">
        <h2>Pagamentos Pendentes</h2>
        {pending.length === 0 ? (
          <p class="empty-message">Nenhum pagamento pendente no momento.</p>
        ) : (
          <div class="payments-grid">
            {pending.map((payment) => (
              <div class="payment-card" data-id={payment.id}>
                <div class="payment-header">
                  <div>
                    <strong>{payment.name}</strong>
                    <span class="email">{payment.email}</span>
                  </div>
                  <span class="badge pending-badge">Pendente</span>
                </div>

                <div class="payment-info">
                  <div class="info-item">
                    <strong>Data:</strong> {new Date(payment.createdAt).toLocaleString('pt-BR')}
                  </div>
                  <div class="info-item">
                    <strong>Comprovante:</strong>
                    <a href={`/uploads/proofs/${payment.fileName}`} target="_blank" class="view-proof">
                      Ver Comprovante
                    </a>
                  </div>
                </div>

                <div class="payment-actions">
                  <button class="btn-approve" onclick={`approvePayment(${payment.id})`}>
                    ✓ Aprovar
                  </button>
                  <button class="btn-reject" onclick={`rejectPayment(${payment.id})`}>
                    ✕ Rejeitar
                  </button>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>

      <div id="approved-tab" class="tab-content">
        <h2>Pagamentos Aprovados</h2>
        {approved.length === 0 ? (
          <p class="empty-message">Nenhum pagamento aprovado ainda.</p>
        ) : (
          <div class="payments-list">
            {approved.map((payment) => (
              <div class="payment-row">
                <div>
                  <strong>{payment.name}</strong>
                  <span class="email">{payment.email}</span>
                </div>
                <span class="date">{new Date(payment.createdAt).toLocaleString('pt-BR')}</span>
                <span class="badge approved-badge">Aprovado</span>
              </div>
            ))}
          </div>
        )}
      </div>

      <div id="rejected-tab" class="tab-content">
        <h2>Pagamentos Rejeitados</h2>
        {rejected.length === 0 ? (
          <p class="empty-message">Nenhum pagamento rejeitado.</p>
        ) : (
          <div class="payments-list">
            {rejected.map((payment) => (
              <div class="payment-row">
                <div>
                  <strong>{payment.name}</strong>
                  <span class="email">{payment.email}</span>
                </div>
                <span class="date">{new Date(payment.createdAt).toLocaleString('pt-BR')}</span>
                <span class="badge rejected-badge">Rejeitado</span>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>

    <div id="notification" class="notification"></div>
  </main>
</Layout>

<style>
  .admin-page {
    min-height: 100vh;
    padding: 2rem 0;
    background: var(--bg-primary);
  }

  .admin-header {
    margin-bottom: 3rem;
  }

  .admin-header h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .stat-card {
    background: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 1rem;
    border: 2px solid #fbbf24;
    text-align: center;
  }

  .stat-card.approved {
    border-color: #22c55e;
  }

  .stat-card.rejected {
    border-color: #ef4444;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    color: var(--text-primary);
  }

  .stat-label {
    color: var(--text-tertiary);
    margin-top: 0.5rem;
  }

  .tabs {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    border-bottom: 2px solid var(--border-color);
  }

  .tab {
    padding: 1rem 2rem;
    background: none;
    border: none;
    color: var(--text-tertiary);
    cursor: pointer;
    border-bottom: 3px solid transparent;
    transition: all 0.3s;
    font-weight: 500;
  }

  .tab.active {
    color: var(--primary);
    border-bottom-color: var(--primary);
  }

  .tab:hover {
    color: var(--text-primary);
  }

  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .tab-content h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .empty-message {
    text-align: center;
    color: var(--text-tertiary);
    padding: 3rem;
    background: var(--bg-secondary);
    border-radius: 1rem;
  }

  .payments-grid {
    display: grid;
    gap: 1.5rem;
  }

  .payment-card {
    background: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 1rem;
    border: 1px solid var(--border-color);
  }

  .payment-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .payment-header strong {
    display: block;
    color: var(--text-primary);
    font-size: 1.1rem;
  }

  .email {
    display: block;
    color: var(--text-tertiary);
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }

  .badge {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .pending-badge {
    background: rgba(251, 191, 36, 0.1);
    color: #fbbf24;
  }

  .approved-badge {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .rejected-badge {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }

  .payment-info {
    margin-bottom: 1.5rem;
  }

  .info-item {
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
  }

  .info-item strong {
    color: var(--text-primary);
    margin-right: 0.5rem;
  }

  .view-proof {
    color: var(--primary);
    text-decoration: underline;
  }

  .payment-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-approve,
  .btn-reject {
    flex: 1;
    padding: 0.75rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }

  .btn-approve {
    background: #22c55e;
    color: white;
  }

  .btn-approve:hover {
    background: #16a34a;
  }

  .btn-reject {
    background: #ef4444;
    color: white;
  }

  .btn-reject:hover {
    background: #dc2626;
  }

  .payments-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .payment-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    background: var(--bg-secondary);
    border-radius: 0.5rem;
    border: 1px solid var(--border-color);
  }

  .payment-row strong {
    display: block;
    color: var(--text-primary);
  }

  .date {
    color: var(--text-tertiary);
    font-size: 0.9rem;
  }

  .notification {
    position: fixed;
    top: 2rem;
    right: 2rem;
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 12px var(--shadow-color);
    display: none;
    z-index: 1000;
  }

  .notification.show {
    display: block;
    animation: slideIn 0.3s ease;
  }

  .notification.success {
    background: #22c55e;
    color: white;
  }

  .notification.error {
    background: #ef4444;
    color: white;
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    .payment-actions {
      flex-direction: column;
    }

    .payment-row {
      flex-direction: column;
      align-items: start;
      gap: 0.5rem;
    }
  }
</style>

<script>
  // Gerenciamento de tabs
  const tabs = document.querySelectorAll('.tab');
  const tabContents = document.querySelectorAll('.tab-content');

  tabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      const tabName = tab.getAttribute('data-tab');

      tabs.forEach((t) => t.classList.remove('active'));
      tabContents.forEach((tc) => tc.classList.remove('active'));

      tab.classList.add('active');
      document.getElementById(`${tabName}-tab`)?.classList.add('active');
    });
  });

  // Notificações
  function showNotification(message: string, type: 'success' | 'error') {
    const notification = document.getElementById('notification');
    if (notification) {
      notification.textContent = message;
      notification.className = `notification show ${type}`;
      setTimeout(() => {
        notification.classList.remove('show');
      }, 3000);
    }
  }

  // Aprovar pagamento
  async function approvePayment(id: number) {
    if (!confirm('Deseja aprovar este pagamento?')) return;

    try {
      const response = await fetch('/api/manage-payment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id, action: 'approve' }),
      });

      const data = await response.json();

      if (response.ok) {
        showNotification('Pagamento aprovado com sucesso!', 'success');
        setTimeout(() => window.location.reload(), 1500);
      } else {
        throw new Error(data.error);
      }
    } catch (error) {
      showNotification('Erro ao aprovar pagamento', 'error');
      console.error(error);
    }
  }

  // Rejeitar pagamento
  async function rejectPayment(id: number) {
    if (!confirm('Deseja rejeitar este pagamento?')) return;

    try {
      const response = await fetch('/api/manage-payment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id, action: 'reject' }),
      });

      const data = await response.json();

      if (response.ok) {
        showNotification('Pagamento rejeitado', 'success');
        setTimeout(() => window.location.reload(), 1500);
      } else {
        throw new Error(data.error);
      }
    } catch (error) {
      showNotification('Erro ao rejeitar pagamento', 'error');
      console.error(error);
    }
  }

  // Expor funções globalmente
  (window as any).approvePayment = approvePayment;
  (window as any).rejectPayment = rejectPayment;
</script>
