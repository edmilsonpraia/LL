<script>
  // Sele√ß√£o de Ebook
  document.addEventListener('DOMContentLoaded', () => {
    const ebookCards = document.querySelectorAll('.ebook-card');
    const selectedEbookInput = document.getElementById('selected-ebook') as HTMLInputElement;

    // Elementos que ser√£o atualizados
    const selectedCover = document.getElementById('selected-cover') as HTMLImageElement;
    const selectedTitle = document.getElementById('selected-title') as HTMLElement;
    const selectedSubtitle = document.getElementById('selected-subtitle') as HTMLElement;
    const selectedPrice = document.getElementById('selected-price') as HTMLElement;
    const paymentPrice = document.getElementById('payment-price') as HTMLElement;

    // Dados dos ebooks
    const ebooksData = [
      {
        id: 'pinns-petrofisica',
        title: 'PINNs em Petrof√≠sica',
        subtitle: 'Integra√ß√£o entre Deep Learning e Equa√ß√µes de Rocha',
        cover: '/images/pinns-petrofisica/cover.png',
        price: 9999
      },
      {
        id: 'integracao-de-metodos',
        title: 'Integra√ß√£o de M√©todos Convencionais e Machine Learning',
        subtitle: 'Caracteriza√ß√£o Petrof√≠sica de Sistemas Fluviais',
        cover: '/images/integracao-de-metodos/cover.png',
        price: 10000
      }
    ];

    // Fun√ß√£o para atualizar a sele√ß√£o
    function selectEbook(card: Element) {
      const ebookId = card.getAttribute('data-ebook-id');
      const ebook = ebooksData.find(e => e.id === ebookId);

      if (!ebook) return;

      // Remove sele√ß√£o de todos os cards
      ebookCards.forEach(c => {
        c.classList.remove('selected');
        const btn = c.querySelector('.btn-select-ebook');
        if (btn) btn.textContent = 'Selecionar';
      });

      // Adiciona sele√ß√£o ao card clicado
      card.classList.add('selected');
      const selectedBtn = card.querySelector('.btn-select-ebook');
      if (selectedBtn) selectedBtn.textContent = 'Selecionado';

      // Atualiza o campo hidden
      if (selectedEbookInput) {
        selectedEbookInput.value = ebook.id;
      }

      // Atualiza informa√ß√µes do produto selecionado
      if (selectedCover) selectedCover.src = ebook.cover;
      if (selectedTitle) selectedTitle.textContent = ebook.title;
      if (selectedSubtitle) selectedSubtitle.textContent = ebook.subtitle;
      if (selectedPrice) selectedPrice.textContent = `${ebook.price.toLocaleString('pt-AO')} Kz`;
      if (paymentPrice) paymentPrice.textContent = `${ebook.price.toLocaleString('pt-AO')} Kz`;
    }

    // Event listeners para os cards
    ebookCards.forEach(card => {
      card.addEventListener('click', () => selectEbook(card));

      const btn = card.querySelector('.btn-select-ebook');
      btn?.addEventListener('click', (e) => {
        e.stopPropagation();
        selectEbook(card);
      });
    });
  });

  // Fun√ß√£o auxiliar para copiar texto
  async function copyToClipboard(text: string, button: HTMLButtonElement) {
    try {
      // Tenta usar a API moderna do Clipboard
      await navigator.clipboard.writeText(text);

      // Feedback visual de sucesso
      const originalText = button.textContent;
      button.textContent = '‚úì Copiado!';
      button.style.background = '#22c55e';
      button.style.color = 'white';
      button.style.borderColor = '#22c55e';

      setTimeout(() => {
        button.textContent = originalText;
        button.style.background = '';
        button.style.color = '';
        button.style.borderColor = '';
      }, 2000);
    } catch (err) {
      console.error('Erro ao copiar:', err);
      button.textContent = '‚úó Erro';
      setTimeout(() => {
        button.textContent = 'Copiar';
      }, 2000);
    }
  }

  // Event listener para copiar IBAN
  const copyIbanBtn = document.getElementById('copy-iban-btn');
  copyIbanBtn?.addEventListener('click', () => {
    const input = document.getElementById('bank-iban') as HTMLInputElement;
    copyToClipboard(input.value, copyIbanBtn as HTMLButtonElement);
  });

  // Event listener para copiar Conta
  const copyAccountBtn = document.getElementById('copy-account-btn');
  copyAccountBtn?.addEventListener('click', () => {
    const input = document.getElementById('bank-account') as HTMLInputElement;
    copyToClipboard(input.value, copyAccountBtn as HTMLButtonElement);
  });

  // Preview do arquivo selecionado
  const fileInput = document.getElementById('proof') as HTMLInputElement;
  const fileName = document.getElementById('file-name');

  fileInput?.addEventListener('change', (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (file) {
      fileName!.textContent = `Arquivo selecionado: ${file.name}`;
    }
  });

  // Envio do formul√°rio
  const form = document.getElementById('proof-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text');
  const spinner = document.getElementById('spinner');
  const messageDiv = document.getElementById('message');

  function showMessage(text: string, type: 'error' | 'success' = 'error') {
    messageDiv!.textContent = text;
    messageDiv!.className = `message ${type}`;
  }

  function setLoading(loading: boolean) {
    if (loading) {
      submitBtn.disabled = true;
      btnText!.textContent = 'Enviando...';
      spinner!.classList.remove('hidden');
    } else {
      submitBtn.disabled = false;
      btnText!.textContent = 'Enviar Comprovante';
      spinner!.classList.add('hidden');
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    setLoading(true);
    messageDiv!.className = 'message';

    const formData = new FormData(form);
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const name = (document.getElementById('name') as HTMLInputElement).value;

    try {
      // Criar mensagem para WhatsApp
      const whatsappMessage = `üîî *Novo Comprovante de Pagamento*\n\n` +
        `üìß Email: ${email}\n` +
        `üë§ Nome: ${name}\n` +
        `üí∞ Produto: PINNs em Petrof√≠sica\n` +
        `üíµ Valor: 9999 Kz\n\n` +
        `Por favor, verificar o comprovante e liberar o acesso ao ebook.`;

      const whatsappURL = `https://wa.me/79961007408?text=${encodeURIComponent(whatsappMessage)}`;

      showMessage(
        'Redirecionando para WhatsApp para enviar o comprovante...',
        'success'
      );

      // Aguarda 1.5 segundos e redireciona para WhatsApp
      setTimeout(() => {
        window.open(whatsappURL, '_blank');
        form.reset();
        fileName!.textContent = '';
        setLoading(false);
        showMessage(
          'Envie o comprovante pelo WhatsApp que abriu. Voc√™ receber√° acesso em at√© 24h.',
          'success'
        );
      }, 1500);

    } catch (error) {
      console.error('Erro:', error);
      showMessage(error instanceof Error ? error.message : 'Erro ao processar solicita√ß√£o', 'error');
      setLoading(false);
    }
  });
</script>
