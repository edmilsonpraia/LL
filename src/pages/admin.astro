import Layout from '../layouts/Layout.astro';
import crypto from 'crypto';

// Configura√ß√£o
const adminPassword = import.meta.env.ADMIN_PASSWORD || 'admin123';
const siteUrl = import.meta.env.SITE_URL || 'http://localhost:4326';

// Fun√ß√£o para criar hash do token de sess√£o
function createSessionToken(password) {
  return crypto.createHash('sha256').update(password + 'salt-admin-2024').digest('hex');
}

// Verifica cookie de autentica√ß√£o
const cookies = Astro.request.headers.get('cookie') || '';
const sessionToken = cookies
  .split(';')
  .find(c => c.trim().startsWith('admin_session='))
  ?.split('=')[1];

const expectedToken = createSessionToken(adminPassword);
let isAuthenticated = sessionToken === expectedToken;
let loginError = '';

// Processa o login
if (Astro.request.method === 'POST' && !isAuthenticated) {
  const formData = await Astro.request.formData();
  const password = formData.get('password');

  if (password === adminPassword) {
    // Cria e define o cookie de sess√£o
    const token = createSessionToken(adminPassword);
    const sessionCookie = `admin_session=${token}; Path=/; HttpOnly; SameSite=Lax; Max-Age=86400`;

    // Define o cookie e redireciona
    return new Response(null, {
      status: 302,
      headers: {
        'Location': '/admin',
        'Set-Cookie': sessionCookie
      }
    });
  } else {
    loginError = 'Senha incorreta!';
  }
}
